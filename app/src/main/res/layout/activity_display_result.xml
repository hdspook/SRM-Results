<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".display_result">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="150dp"
        app:cardCornerRadius="0dp"
        app:cardElevation="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/profile_screen"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:padding="5dp"
                        android:src="@drawable/ic_report" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="5dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:text="Himanshu Dubey"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/reg"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="2dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="sans-serif-medium"
                            android:text="RA1611003030443"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/dob"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="2dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="sans-serif-medium"
                            android:text="25-07-1998"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/program"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="2dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="sans-serif-medium"
                            android:text="B.Tech. - COMPUTER SCIENCE AND ENGINEERING"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:id="@+id/college"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_marginLeft="2dp"
                            android:autoSizeTextType="uniform"
                            android:fontFamily="sans-serif-medium"
                            android:text="SRM Engineering College, Ghazhiabad"
                            android:textColor="@android:color/white" />


                    </LinearLayout>


                </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rec"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" />


</androidx.constraintlayout.widget.ConstraintLayout>